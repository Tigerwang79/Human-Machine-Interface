<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" alignment="TOP_CENTER" style="-fx-border-color: orange; -fx-border-width: 3;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jeudelavie.controleur.ControleurBasique">
   <children>
      <MenuBar fx:id="menuBarre" VBox.vgrow="ALWAYS">
        <menus>
            <Menu fx:id="menuFichier" mnemonicParsing="false" text="Fichier">
              <items>
                <MenuItem fx:id="menuItemQuitter" mnemonicParsing="false" onAction="#menuItemQuitter" text="Quitter" />
              </items>
            </Menu>
          <Menu fx:id="menuAffichage" mnemonicParsing="false" text="Affichage">
            <items>
              <MenuItem fx:id="menuItemPleinEcran" mnemonicParsing="false" onAction="#menuItemPleinEcran" text="Plein Écran" />
                  <MenuItem fx:id="menuItemMinimiser" mnemonicParsing="false" onAction="#menuItemMinimiser" text="Minimiser" />
            </items>
          </Menu>
          <Menu fx:id="menuAide" mnemonicParsing="false" text="Aide">
            <items>
                  <MenuItem fx:id="menuItemTutoriel" mnemonicParsing="false" onAction="#menuItemTutoriel" text="Tutoriel" />
              <MenuItem fx:id="menuItemContacter" mnemonicParsing="false" onAction="#menuItemContacter" text="Contacter" />
                  <MenuItem fx:id="menuItemAPropos" mnemonicParsing="false" onAction="#menuItemAPropos" text="À Propos" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <VBox fx:id="vboxApplication" alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="20.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
